# Docker Swarm Environment Configuration
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN=local
ACME_EMAIL=admin@local

# Database Configuration
POSTGRES_DB=homelab
POSTGRES_USER=admin
# POSTGRES_PASSWORD will be set via Docker secrets

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# MinIO Configuration
MINIO_ROOT_USER=admin
# MINIO_ROOT_PASSWORD will be set via Docker secrets

# Grafana Configuration
# GRAFANA_PASSWORD will be set via Docker secrets

# Network Configuration
SWARM_NETWORK_CIDR=10.0.0.0/8
FRONTEND_NETWORK_CIDR=10.1.0.0/16
BACKEND_NETWORK_CIDR=10.2.0.0/16
DATABASE_NETWORK_CIDR=10.3.0.0/16
MONITORING_NETWORK_CIDR=10.4.0.0/16
LOGGING_NETWORK_CIDR=10.5.0.0/16
STORAGE_NETWORK_CIDR=10.6.0.0/16

# Node Labels (set these on your nodes)
# Manager nodes: docker node update --label-add role=manager <node-id>
# Database nodes: docker node update --label-add database=true <node-id>
# Storage nodes: docker node update --label-add storage=true <node-id>
# Logging nodes: docker node update --label-add logging=true <node-id>

# Resource Limits
WEB_REPLICAS=3
API_REPLICAS=2
PROMETHEUS_RETENTION=200h
ELASTICSEARCH_HEAP_SIZE=512m

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Security Configuration
ENABLE_TLS=true
ENABLE_FIREWALL=true
ENABLE_LOGIN_PROTECTION=true

# Development/Production Mode
ENVIRONMENT=development
DEBUG_MODE=false
